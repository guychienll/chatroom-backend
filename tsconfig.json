{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "module": "ESNext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  },

  "exclude": ["node_modules"]
}
